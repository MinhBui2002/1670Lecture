@model ICollection<web8.Models.Mobile>

<div class="card-group">

    <div class="row">
        @foreach (var mobile in Model)
        {
            <div class="col-md-4 mt-3">
                <div class="card">
                    <div class="card card-img-top">
                        <a asp-controller="Mobile" asp-action="Detail" asp-route-id="@mobile.Id">
                            <img src="@mobile.Image" width="150" height="200">
                        </a>
                    </div>
                    <div class="card card-title">
                        <h3 class="text text-primary">@mobile.Name</h3>
                    </div>
                    <div class="card card-subtitle">
                        <h3 class="text text-danger">@mobile.Price $</h3>

                    </div>
                    @if (mobile.Quantity >= 1)
                    {
                        <div class="card card-subtitle">
                            <h3 class="text text-info">In stock: @mobile.Quantity $</h3>
                        </div>
                        <div class="card card-body">
                            <form action="" method="post">
                                <input type="hidden" name="id" value="@mobile.Id">
                                <input type="number" min="1" max="@mobile.Quantity" class="form-control" name="quantity">
                                <input type="submit" class="btn btn-success" value="Add to cart">
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="card card-subtitle">
                            <h3 class="text text-info">Out of stock</h3>
                        </div>
                    }
                </div>
            </div>
        }
    </div>


</div>