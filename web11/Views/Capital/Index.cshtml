@model ICollection<Capital>


<div class="container">
    <table class="table table-bordered">
        <tr>
            <th colspan="3">Capital list</th>
            <th>
                <a class="btn btn-primary" asp-controller="Capital" asp-action="Add">Add</a>
            </th>
        </tr>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Area</th>
            <th>Country</th>
            <th>Menu</th>
        </tr>
        @foreach (var capital in Model)
        {
            <tr>
                <th>@capital.Id</th>
                <th>
                    <a asp-controller="Capital" asp-action="Detail" asp-route-id="@capital.Id">@capital.Name</a>
                </th>
                <th>@capital.Area</th>
                <th>@capital.Country.Name</th>
                <th>
                    <a class="btn btn-primary" asp-controller="Capital" asp-action="Edit" asp-route-id="@capital.Id">Edit</a>
                    <a class="btn btn-danger" onclick="return confirm(' Are you sure you want to delete?')" asp-controller="Capital" asp-action="Delete" asp-route-id="@capital.Id">Delete</a>
                </th>
            </tr>
        }
    </table>
</div>
