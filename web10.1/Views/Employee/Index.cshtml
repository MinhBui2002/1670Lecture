@model ICollection<Employee>


<div class="container col-md-8 text-center mt-3">
    <table class="table table-responsive table-primary">
        <thead>
            <tr>
                <th colspan="3" class="text text-success h2">Staff list</th>
                <th> <a class="btn btn-primary" asp-controller="Employee" asp-action="Add"></a></th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Department</th>
                <th>Salary</th>
                <th>Image</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td> @employee.Name </td>

                    <td> @employee.Mobile </td>
                    <td> @employee.Salary </td>
                    <td> @employee.Department </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Detail" asp-route-id="@employee.Id">
                            <img class="img-thumbnail" src="@employee.Image" height="100" width="100" />
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id"></a>
                        <a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" onclick="return confirm('Do you want to delete this employee ?')"></a>
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>